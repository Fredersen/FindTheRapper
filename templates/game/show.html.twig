{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>PhotoMap</th>
                <td>{{ game.photoMap }}</td>
            </tr>
            <tr>
                <th>PhotoRapper</th>
                <td>{{ game.photoRapper }}</td>
            </tr>
            <tr>
                <th>SearchSound</th>
                <td>{{ game.searchSound }}</td>
            </tr>
            <tr>
                <th>VictorySound</th>
                <td>{{ game.victorySound }}</td>
            </tr>
            <tr>
                <th>PositionX</th>
                <td>{{ game.positionX }}</td>
            </tr>
            <tr>
                <th>PositionY</th>
                <td>{{ game.positionY }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ game.time }}</td>
            </tr>
            <tr>
                <th>Level</th>
